``c
#include <stdbool.h>
#include <stdio.h>
#include <stdlib.h>

int solution(int price, char *grade) {
  int answer = 0;
  if (grade == "V") {
    answer = price * 0.95;
  } else if (grade == "S") {
    answer = price * 0.9;
  } else if (grade == "G") {
    answer = price * 0.85;
  } else {
    answer = price;
  }
  return answer;
}

int main() {
  int price1 = 2500;
  char *grade1 = "V";
  int ret1 = solution(price1, grade1);
  printf("총합은=%d\n", ret1);

  int price2 = 96900;
  char *grade2 = "S";
  int ret2 = solution(price2, grade2);
  printf("총합=%d", ret2);

  return 0;
}
``
