-
//전역변수는 0으로 자동으로 초기화






```c
//오른쪽 정렬로 피라미드를 쌓는 코드
//이중 반복문 사용
#include<stdio.h>

int main(){
    int n;
    scanf("%d",&n);
    
    for (int i = 0; i < n; i++){    //i가 n보다 작으면 반복
        for (int j = 0; j < n; j++){    //j가 n보다 작으면 반복
        if (j<n-i-1){   //j가 n에서 i와 1를 뺀 값보다 작으면 " "을 출력 아니면 "*"을 출력
            printf(" ");
        }
          else
          printf("*");
        }
        printf("\n");   //내부 반복문이 종료될때마다 실행
    }
    return 0;
}
