- 3월 30일

```C
#include<stdio.h>

int main(void)
{
    char c;
    int i;
    float f;

    c = 10000; //내림 변환
    i = 1.23456 + 10  // 내림 변환
    f = 10+20; //올림 변환
    printf("c=%d, i=%d, f=%f\n",c,i,f);
    return 0;
}
```


```c
#include<stdio.h>

int main(void)
{
    int number;
    printf("정수를 입력하시오 :");
    scanf("%d",&number);

    if(number > 0)
    {
        printf("양수입니다\n");
    }
    printf("입력한 값은 %d입니다.", number);

    return 0;
}
```

```C
#include<stdio.h>

int main(void)
{
    int number;
    printf("정수를 입력하시오 :");
    scanf("%d",&number);

   if (number % 2 ==0) //나누기는 % <-이거임, number 변수를 2로 나누었을때 0으로 나누어 떨어지는가
   {
    printf("짝수입니다."); //나누어 떨어지면 짝수
   }
    else
    [
    printf("홀수입니다."); //나누어 떨어지지 않으면 홀수
    }
   return 0;
}
```


```C
#include<stdio.h>

int main(void)
{
    char ch;
    printf("문자를 입력하시오:");

    ch = getchar();
    
    if (ch>=65&&ch<=90)
    {
    printf("%c는 대문자입니다.\n",ch);
    }
    else if (ch >=97&&ch<=122)
    {
    printf("%c는 소문자입니다\n",ch);
    }
    else if (ch>=0&&ch<=9)
    {
    printf("%c는 숫자입니다.\n",ch);
    }
    else
    {
        printf("%c는 기타문자 입니다.\n",ch);
    }
    ```


```c
#include<stdio.h>

int main(void)
{
    int a, b;
    printf("두 문자를 입력하시오 :");
    scanf("%d, %d",&a, &b);

    if (a > b)
    {
        printf(">\n");
    }
    else if (a < b)
    {
        printf("<\n");
    }
    else
    {
        printf("=\n");
    }
    return 0;
}
```
